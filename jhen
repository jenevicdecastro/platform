<section class="cart">
  <h2>Shopping Cart</h2>
  <ul id="cart-items"></ul>
  <p><strong>Total:</strong> $<span id="total">0</span></p>
  <button onclick="checkout()" style="padding:10px; background:#0a3cff; color:white; border:none; border-radius:5px; cursor:pointer;">Checkout (Pay)</button>
</section>

<script>
let cart = [];
let total = 0;

function addToCart(name, price){
  cart.push({name, price});
  total += price;
  displayCart();
}

function displayCart(){
  const list = document.getElementById("cart-items");
  list.innerHTML = "";
  cart.forEach((item,index)=>{
    list.innerHTML += `<li>${item.name} - $${item.price} <button onclick="removeItem(${index})">X</button></li>`;
  });
  document.getElementById("total").textContent = total;
}

function removeItem(i){
  total -= cart[i].price;
  cart.splice(i,1);
  displayCart();
}

function checkout(){
  if(cart.length===0){
    alert("Cart is empty!");
    return;
  }
  alert("Total: $"+total+"\nRedirect to payment gateway here.");
  // Add Paystack / Stripe integration here later
}
</script>

